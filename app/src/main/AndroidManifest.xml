<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.bd_bands">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Artcellinfo"
            android:label="@string/title_activity_artcellinfo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Onnosomoysongs"
            android:label="Onno somoy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Oniketprantorsongs"
            android:label="@string/title_activity_oniketprantorsongs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".onnosomoyvideo" />
        <activity android:name=".MP3song" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".Search" />
        <activity android:name=".UploadAlbum" />
        <activity android:name=".UploadSong" />
        <activity android:name=".Profile" />
        <activity android:name=".EditAlbum" />
        <activity android:name=".EditSong" />
        <activity android:name=".EditBand" />
        <activity android:name=".CreateBand"></activity>
    </application>

</manifest>