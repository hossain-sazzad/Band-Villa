<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#191919"

    tools:context="com.example.user.bd_bands.Search">


<TextView
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:textSize="30sp"
    android:textColor="#ffff"
    android:layout_height="40dp"
    android:text="Bands"
    />
    <TextView
        android:layout_marginLeft="20dp"

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
android:textColor="#ffffff"
        android:id="@+id/bandnull"
        android:text="no band available"
        android:visibility="invisible"
        />
    <ListView
        android:layout_marginLeft="20dp"

        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/bandlist"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

    </ListView>
    <TextView
        android:layout_marginLeft="20dp"

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:textColor="#ffffff"

        android:text="Albums"
        />
    <TextView
        android:layout_marginLeft="20dp"

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="#ffffff"

        android:id="@+id/albumnull"

        android:text="no album available"
        android:visibility="invisible"
        />
    <ListView
        android:layout_marginLeft="20dp"

        android:id="@+id/albumlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </ListView>
    <TextView
        android:layout_marginLeft="20dp"

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:textColor="#ffffff"

        android:text="Songs"
        />
    <TextView
        android:layout_marginLeft="20dp"

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="#ffffff"

        android:id="@+id/songnull"

        android:text="no song available"
        android:visibility="invisible"
        />
    <ListView
        android:layout_marginLeft="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/onnosomoysonglist"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
    </ListView>

</LinearLayout>
