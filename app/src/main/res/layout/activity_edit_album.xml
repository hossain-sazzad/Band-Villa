<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.bd_bands.EditAlbum">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Album name"
        android:textSize="25dp"
        />
    <EditText
        style="@style/Widget.AppCompat.EditText"
        android:hint="   band name"
        android:background="@layout/rounded_border_edittext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/editalbumname"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Release Year"
        android:textSize="25dp"
        />
    <EditText
        style="@style/Widget.AppCompat.EditText"
        android:background="@layout/rounded_border_edittext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/editreleaseyear"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Total Song"
        android:textSize="25dp"
        />
    <EditText
        style="@style/Widget.AppCompat.EditText"
        android:background="@layout/rounded_border_edittext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/edittotalsong"/>

    <Button
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:text="Update"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/editupdatebutton"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/profilecountsongs"
        />
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/profilesonglist"
        android:layout_height="wrap_content"/>

</LinearLayout>
