<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

android:background="#191919"
    tools:context="com.example.user.bd_bands.UploadAlbum">

    <TextView
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Add Album"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:layout_marginLeft="20dp"
        android:text="Album name"/>
    <EditText
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.EditText"
        android:hint="   band name"
        android:background="@layout/rounded_border_edittext"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"

        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/uploadalbumname"

        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
android:textColor="#ffffff"
        android:textSize="20dp"

        android:text="Release year"/>
    <EditText
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.EditText"
        android:background="@layout/rounded_border_edittext"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:id="@+id/uploadreleaseyear"/>
    <TextView
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
android:layout_marginTop="20dp"
        android:text="Songs count"/>
    <EditText
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.EditText"
        android:hint="   band name"
        android:background="@layout/rounded_border_edittext"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"

        android:id="@+id/uploadsongscount"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
android:background="#308866"
        android:id="@+id/uploadbutton"
        android:gravity="center"/>

</LinearLayout>
